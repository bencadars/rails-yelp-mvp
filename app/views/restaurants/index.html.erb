<div class="container">
<h1>Restaurants</h1>
<% @restaurants.each do |restaurant| %>
<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
<p><%= restaurant.address %></p>
<% end %>
<div class="mt-5">
<%= link_to "Create a new restaurant", new_restaurant_path , class: "btn btn-primary" %>
</div>
</div>
